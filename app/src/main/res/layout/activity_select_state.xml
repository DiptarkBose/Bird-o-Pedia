<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:layout_width="match_parent"
tools:context="com.example.android.bird_o_pedia.SelectState">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/introbar"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/logos"
            android:id="@+id/logo"
            android:layout_height="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/intromsg1_text_view"
            android:layout_marginTop="50dp"
            android:text="Dedicated to the religion of Bird-watching"
            android:textSize="10sp"
            android:layout_marginLeft="140dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:layout_below="@id/introbar"
        android:id="@+id/intromsg2_text_view"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Let me help you out!!"
        android:id="@+id/help_text_view"
        android:textSize="20sp"
        android:textColor="#00BFA5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/intromsg2_text_view"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/help_text_view"
        android:id="@+id/b_watch_image_view"
        android:layout_height="300dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/b_watch"
            android:layout_marginTop="20dp"
            android:layout_height="350dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="The Best Comprehensive Bird Search"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="STEP 1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="190dp"
            android:layout_marginRight="50dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="150dp"
            android:text="Enter the state where you spotted the Mystery Bird...."
            android:layout_alignParentRight="true"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_height="80dp" />
    </RelativeLayout>
    <Spinner
        android:layout_width="350dp"
        android:layout_below="@id/b_watch_image_view"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/spinner1"
        android:layout_centerHorizontal="true"></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have suggestions to make this app more awesome?"
        android:layout_below="@id/spinner1"
        android:layout_centerHorizontal="true"
        android:id="@+id/suggestion"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Write to the developer!"
        android:paddingBottom="12dp"
        android:textStyle="normal"
        android:layout_below="@id/suggestion"
        android:id="@+id/contactdev"
        android:textColor="#00BFA5"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
</ScrollView>
